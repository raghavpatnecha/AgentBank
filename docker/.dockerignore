# Docker ignore file for API Test Agent
# Optimizes build context and reduces image size

# Node modules (will be installed in container)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Build outputs
dist/
build/
coverage/
.nyc_output/

# Test results and reports
test-results/
playwright-report/
*.log
*.report.json
*.report.html

# Git files
.git/
.gitignore
.gitattributes

# IDE and editor files
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Environment files (never include secrets)
.env
.env.local
.env.*.local
*.key
*.pem
*.p12
credentials.json

# Documentation
*.md
!package*.json
docs/
.checkpoints/

# CI/CD
.github/
.gitlab-ci.yml
.travis.yml
azure-pipelines.yml

# Temporary files
tmp/
temp/
*.tmp

# Cache directories
.cache/
.npm/
.eslintcache
.prettier-cache

# Testing and development
.swarm/
.hive-mind/
.claude/
.claude-flow/
memory/
coordination/
tasks/

# Docker files (except the ones we need)
docker-compose*.yml
Dockerfile*
.dockerignore

# Scripts and tools
scripts/
tools/

