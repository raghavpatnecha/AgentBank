# API Test Agent - Environment Configuration
# Copy this file to .env and fill in your values

# API Base URL
# This is the base URL for the API you want to test
# Examples:
#   - http://localhost:3000
#   - https://api.example.com
#   - https://staging-api.example.com/v1
API_BASE_URL=http://localhost:3000

# API Authentication
# Uncomment and set if your API requires authentication

# API Key (for X-API-Key header)
# API_KEY=your-api-key-here

# Bearer Token (for Authorization header)
# API_TOKEN=your-bearer-token-here

# OAuth2 Credentials (if using OAuth2)
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret
# OAUTH_TOKEN_URL=https://auth.example.com/oauth/token

# Basic Auth (if using Basic authentication)
# API_USERNAME=your-username
# API_PASSWORD=your-password

# Test Configuration
# CI environment flag (affects test retries and parallelization)
# CI=true

# Playwright Options
# PLAYWRIGHT_WORKERS=4
# PLAYWRIGHT_TIMEOUT=30000

# Test Data Generation
# Seed for faker to ensure reproducible test data (optional)
# FAKER_SEED=12345

# Feature Flags for Test Generation
# Enable/disable specific test types
# INCLUDE_AUTH_TESTS=true
# INCLUDE_VALIDATION_TESTS=true
# INCLUDE_EDGE_CASE_TESTS=true
# INCLUDE_PERFORMANCE_TESTS=false

# Output Configuration
# TEST_OUTPUT_DIR=tests/generated
# TEST_REPORT_DIR=test-results
