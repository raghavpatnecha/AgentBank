{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/test-report.schema.json",
  "title": "TestReport",
  "description": "Schema for API test execution reports",
  "type": "object",
  "required": ["version", "generatedAt", "summary", "environment", "tests"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Report format version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0", "2.1.0"]
    },
    "generatedAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of report generation",
      "format": "date-time",
      "examples": ["2025-01-08T10:30:00.000Z"]
    },
    "summary": {
      "type": "object",
      "description": "Test execution summary statistics",
      "required": ["total", "passed", "failed", "skipped", "duration", "successRate"],
      "properties": {
        "total": {
          "type": "integer",
          "description": "Total number of tests",
          "minimum": 0,
          "examples": [50]
        },
        "passed": {
          "type": "integer",
          "description": "Number of passed tests",
          "minimum": 0,
          "examples": [45]
        },
        "failed": {
          "type": "integer",
          "description": "Number of failed tests",
          "minimum": 0,
          "examples": [3]
        },
        "skipped": {
          "type": "integer",
          "description": "Number of skipped tests",
          "minimum": 0,
          "examples": [2]
        },
        "selfHealed": {
          "type": "integer",
          "description": "Number of self-healed tests",
          "minimum": 0,
          "examples": [2]
        },
        "duration": {
          "type": "number",
          "description": "Total execution duration in milliseconds",
          "minimum": 0,
          "examples": [45200]
        },
        "successRate": {
          "type": "number",
          "description": "Success rate percentage (0-100)",
          "minimum": 0,
          "maximum": 100,
          "examples": [90, 95.5]
        },
        "startTime": {
          "type": "string",
          "format": "date-time",
          "description": "Test execution start time"
        },
        "endTime": {
          "type": "string",
          "format": "date-time",
          "description": "Test execution end time"
        }
      }
    },
    "environment": {
      "type": "object",
      "description": "Test execution environment information",
      "required": ["timestamp", "nodeVersion", "osInfo"],
      "properties": {
        "baseUrl": {
          "type": "string",
          "description": "Base URL of API under test",
          "format": "uri",
          "examples": ["https://api.staging.example.com"]
        },
        "environment": {
          "type": "string",
          "description": "Environment name",
          "examples": ["staging", "production", "development"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "Test execution timestamp",
          "examples": ["2025-01-08T10:30:00.000Z"]
        },
        "nodeVersion": {
          "type": "string",
          "description": "Node.js version",
          "pattern": "^v\\d+\\.\\d+\\.\\d+$",
          "examples": ["v20.10.0", "v18.16.0"]
        },
        "osInfo": {
          "type": "string",
          "description": "Operating system information",
          "examples": ["Linux 5.15.0", "Darwin 22.1.0", "Windows 10.0.19044"]
        },
        "platform": {
          "type": "string",
          "description": "Platform identifier",
          "enum": ["linux", "darwin", "win32", "freebsd", "openbsd"],
          "examples": ["linux"]
        },
        "architecture": {
          "type": "string",
          "description": "CPU architecture",
          "enum": ["x64", "arm64", "ia32"],
          "examples": ["x64"]
        },
        "ci": {
          "type": "object",
          "description": "CI/CD environment information",
          "properties": {
            "isCI": {
              "type": "boolean",
              "description": "Whether running in CI environment"
            },
            "provider": {
              "type": "string",
              "description": "CI provider name",
              "examples": ["github", "gitlab", "jenkins", "travis"]
            },
            "buildNumber": {
              "type": "string",
              "description": "Build or run number"
            },
            "branch": {
              "type": "string",
              "description": "Git branch name"
            },
            "commit": {
              "type": "string",
              "description": "Git commit SHA"
            },
            "pullRequest": {
              "type": "string",
              "description": "Pull request number"
            }
          }
        }
      }
    },
    "tests": {
      "type": "array",
      "description": "Individual test results",
      "items": {
        "type": "object",
        "required": ["id", "name", "suite", "status", "duration"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique test identifier",
            "examples": ["test-1", "api-users-get-all"]
          },
          "name": {
            "type": "string",
            "description": "Test name or title",
            "examples": ["GET /users - Retrieve all users"]
          },
          "suite": {
            "type": "string",
            "description": "Test suite or file name",
            "examples": ["Users API", "Authentication Tests"]
          },
          "status": {
            "type": "string",
            "description": "Test execution status",
            "enum": ["passed", "failed", "skipped", "timeout", "error"],
            "examples": ["passed"]
          },
          "duration": {
            "type": "number",
            "description": "Test duration in milliseconds",
            "minimum": 0,
            "examples": [125, 1250.5]
          },
          "startTime": {
            "type": "string",
            "format": "date-time",
            "description": "Test start time"
          },
          "endTime": {
            "type": "string",
            "format": "date-time",
            "description": "Test end time"
          },
          "retries": {
            "type": "integer",
            "description": "Number of retry attempts",
            "minimum": 0
          },
          "selfHealed": {
            "type": "boolean",
            "description": "Whether test was self-healed"
          },
          "request": {
            "type": "object",
            "description": "HTTP request information",
            "properties": {
              "method": {
                "type": "string",
                "description": "HTTP method",
                "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"],
                "examples": ["GET"]
              },
              "url": {
                "type": "string",
                "description": "Request URL or path",
                "examples": ["/users", "/api/v1/products/123"]
              },
              "headers": {
                "type": "object",
                "description": "Request headers",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "body": {
                "description": "Request body"
              },
              "query": {
                "type": "object",
                "description": "Query parameters",
                "additionalProperties": {
                  "type": "string"
                }
              }
            }
          },
          "response": {
            "type": "object",
            "description": "HTTP response information",
            "properties": {
              "status": {
                "type": "integer",
                "description": "HTTP status code",
                "minimum": 100,
                "maximum": 599,
                "examples": [200, 404, 500]
              },
              "headers": {
                "type": "object",
                "description": "Response headers",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "body": {
                "description": "Response body"
              },
              "responseTime": {
                "type": "number",
                "description": "Response time in milliseconds",
                "minimum": 0
              }
            }
          },
          "error": {
            "type": "object",
            "description": "Error information for failed tests",
            "properties": {
              "message": {
                "type": "string",
                "description": "Error message"
              },
              "type": {
                "type": "string",
                "description": "Error type"
              },
              "stack": {
                "type": "string",
                "description": "Stack trace"
              },
              "expected": {
                "description": "Expected value"
              },
              "actual": {
                "description": "Actual value"
              },
              "diff": {
                "type": "string",
                "description": "Diff output"
              }
            }
          },
          "tags": {
            "type": "array",
            "description": "Test tags",
            "items": {
              "type": "string"
            }
          },
          "metadata": {
            "type": "object",
            "description": "Additional test metadata",
            "additionalProperties": true
          }
        }
      }
    },
    "selfHealing": {
      "type": "object",
      "description": "Self-healing statistics",
      "properties": {
        "totalAttempts": {
          "type": "integer",
          "description": "Total healing attempts",
          "minimum": 0
        },
        "successful": {
          "type": "integer",
          "description": "Successful healings",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "description": "Failed healings",
          "minimum": 0
        },
        "successRate": {
          "type": "number",
          "description": "Success rate percentage (0-100)",
          "minimum": 0,
          "maximum": 100
        },
        "byFailureType": {
          "type": "object",
          "description": "Healings by failure type",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        },
        "totalCost": {
          "type": "number",
          "description": "Total cost in USD",
          "minimum": 0
        }
      }
    },
    "performance": {
      "type": "object",
      "description": "Performance metrics",
      "properties": {
        "averageResponseTime": {
          "type": "number",
          "description": "Average response time in milliseconds",
          "minimum": 0
        },
        "medianResponseTime": {
          "type": "number",
          "description": "Median response time in milliseconds",
          "minimum": 0
        },
        "p95ResponseTime": {
          "type": "number",
          "description": "95th percentile response time",
          "minimum": 0
        },
        "slowestTest": {
          "type": "object",
          "description": "Slowest test information",
          "properties": {
            "name": {
              "type": "string",
              "description": "Test name"
            },
            "duration": {
              "type": "number",
              "description": "Test duration in milliseconds",
              "minimum": 0
            }
          }
        },
        "fastestTest": {
          "type": "object",
          "description": "Fastest test information",
          "properties": {
            "name": {
              "type": "string",
              "description": "Test name"
            },
            "duration": {
              "type": "number",
              "description": "Test duration in milliseconds",
              "minimum": 0
            }
          }
        },
        "testsPerSecond": {
          "type": "number",
          "description": "Test execution rate",
          "minimum": 0
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "additionalProperties": true
    }
  }
}
